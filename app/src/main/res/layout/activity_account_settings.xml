<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configurações da Conta"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <!-- Seção de Notificações -->
    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:text="Preferências de Notificação"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchEmailNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receber notificações por e-mail"
        android:textSize="18sp"
        android:padding="16dp"/>

    <!-- Seção de Idioma -->
    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_marginTop="24dp"
        android:text="Idioma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvLanguageSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Português (Brasil)"
        android:textSize="18sp"
        android:padding="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>
